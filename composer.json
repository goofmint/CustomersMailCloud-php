{
    "name": "customers-mail-cloud/php-sdk",
    "description": "PHP SDK for Customers Mail Cloud API",
    "type": "library",
    "keywords": ["customers-mail-cloud", "email", "api", "sdk", "php"],
    "homepage": "https://github.com/your-username/customers-mail-cloud-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Customers Mail Cloud",
            "email": "support@customers-mail-cloud.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "CustomersMailCloud\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CustomersMailCloud\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyse src tests",
        "cs-fix": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php",
        "cs-check": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.php --dry-run --diff"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}